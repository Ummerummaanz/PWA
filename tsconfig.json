{
  "compilerOptions": {
    "target": "esnext",
    "module": "es2020",
    "lib": ["es2015", "dom"],
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.tsx",
    "./typings/**/*.d.ts",
    "./@types/**/*.d.ts",
    "./src/**/*.json",
    "./__tests__/*.tsx",
    "./__tests__/*.ts"
  ]
}
